<div class="user-form forgot-password-reset-form">
  <div class="content">
    <h3>Reset Your Password</h3>
    <p class="instructions">
      Please enter a new password below to access your Member Site account.
    </p>
    <form id="forgot" method="post" class="form">
      <div class="form-group{{#if formErrors.pass}} has-error{{/if}} pass">
        <div class="controls">
          <input name="pass" type="password" class="form-control" placeholder="New Password">
          {{#if formErrors.pass}} <span class="help-inline">{{formErrors.pass}}</span>{{/if}}
        </div>
      </div>
      <div class="form-group{{#if formErrors.pass2}} has-error{{/if}} pass2">
        <div class="controls">
          <input name="pass2" type="password" class="form-control" placeholder="Re-enter New password">
          {{#if formErrors.pass2}} <span class="help-inline">{{formErrors.pass2}}</span>{{/if}}
        </div>
      </div>
      {{> users/partials/extraFields}}
      <div class="form-group submit">
        <div class="controls clearfix">
          <input type="submit" class="btn btn-primary pull-right log-in-button" value="Reset Password">
        </div>
      </div>
    </form>
  </div>
</div>